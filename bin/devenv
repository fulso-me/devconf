#!/bin/bash

if [ "$1" == "ls" ]; then
  docker images | docker images | awk '/^fulsome\/devenv/ {print $2}'
  exit 0
fi

if [ -z "$1" ]; then
  if [ -n "${DEVENVTAG}" ]; then
    IMG="${DEVENVTAG}"
  else
    IMG="latest"
  fi
else
  IMG="$1"
fi

if [ -z "$2" ]; then
  DIR="$(pwd)"
else
  DIR="$(readlink -f "$2")"
fi

docker run -it --network="host" --hostname="devenv:${IMG}" -v "${DIR}:${DIR}" -v /var/run/docker.sock:/var/run/docker.sock -v "${HOME}/.ssh:/_ssh" -v "${HOME}/.kube:/_kube" -v "${HOME}/.local/share/direnv:/_direnv" fulsome/devenv:"$IMG" "$(id -un)" "$(id -u)" "$(id -gn)" "$(id -g)" "${DIR}" "$(getent group docker | cut -d: -f3)"
